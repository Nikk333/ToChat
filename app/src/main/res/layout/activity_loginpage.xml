<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LOGINPAGE">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/backbig"/>

</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_7sdp"
        android:textSize="@dimen/_30sdp"
        android:text="Welcome to login" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_minus10sdp"
           android:gravity="bottom">

            <ImageView
                android:id="@+id/LOGINIMG"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_230sdp"
                android:scaleType="fitCenter"
                android:layout_marginBottom="@dimen/_minus10sdp"
                app:layout_constraintBottom_toTopOf="@+id/CVLOGINPAGE"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/recolor" />
        <androidx.cardview.widget.CardView
            android:id="@+id/CVLOGINPAGE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:cardBackgroundColor="@color/lightpurple"
            app:cardCornerRadius="@dimen/_20sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_12sdp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:outlineAmbientShadowColor="@color/white"
                    android:outlineSpotShadowColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_12sdp">
                            <TextView
                                android:id="@+id/EMAILTEXTLOGINPAGE"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Your email"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />
            <EditText
                android:id="@+id/EMAILENTRYLOGINPAGE"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/borderrect"
                android:defaultFocusHighlightEnabled="true"
                android:paddingStart="@dimen/_9sdp"
                android:inputType="textEmailAddress"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:paddingEnd="@dimen/_5sdp"
                tools:ignore="SpeakableTextPresentCheck" />
            <TextView
                android:id="@+id/PASSWORDTEXTLOGINPAGE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <EditText
                android:id="@+id/PASSWORDENTRYLOGINPAGE"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/borderrect"
                android:inputType="textPassword"
                android:paddingStart="@dimen/_9sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                tools:ignore="SpeakableTextPresentCheck" />
                       <TextView
                           android:id="@+id/FORGET"
                           android:layout_marginTop="@dimen/_5sdp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/linkpurple"
                           android:textStyle="bold"
                           android:text="forget password?"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:paddingHorizontal="@dimen/_20sdp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/LOGINCVLOGINPAGE"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="@dimen/_18sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/LOGINTEXTLOGINPAGE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Login"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_20sdp"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:id="@+id/ACCOUNTTEXTLOGINPAGE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/NEWTEXTLOGINPAGE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New user"
                    android:textColor="@color/linkpurple"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>
</RelativeLayout>